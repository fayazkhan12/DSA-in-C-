// FIND THE DIFF BT THE SUM OF ELEMENTS AT EVEN IDECIES TO THE SUM OD ELEMENTS AT ODD INDICESS...

#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the size of array = ";
    cin>>n;
    int arr[n];
    for(int i=0;i<n-1;i++)
    {
        cin>>arr[i];
        
    }
    int sum = 0;
    int ssm =0;
    for(int i=0;i<n-1;i++)
    {
        if(i%2==0)
    {
        sum+=arr[i];
    }
        else
        {
            ssm+=arr[i];
        }
    }
    cout<<sum-ssm;
    return 0;
    
}
       



















































