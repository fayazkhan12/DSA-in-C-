#include<iostream>
using namespace std;
int main()
{
    int arr[]={3,4,5,6,7};
    int *p=arr;
     *p=9; // this will modify the value of arrry
    for(int i=0;i<=4;i++)
    {
        cout<<*p<<" "; // this will only print the first element 
        p++;// increment will print all elements..
    }
}













