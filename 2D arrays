#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the no of rows = ";
    cin>>n;
    int m;
    cout<<"enter the no of column = ";
    cin>>m;
    int arr[n][m];
    
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            cin>>arr[i][j];
        }
    }
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            cout<<arr[j][i]<<" ";
        }
        cout<<endl;
    }
}











// TRANSPOSING A SQUARE MATRIX

#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the matrix element = ";
    cin>>n;
    int arr[n];
    
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cin>>arr[i][j];
        }
    }
    
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    
    cout<<endl;
    
    
    
    
    
    
    //transposing the elements os square matrix
    
    for(int i=0;i<n;i++)
    {
        for(int j=i+1;j<n;j++)
        {
            cout<<arr[i][j];
        }
    }
    
}





































