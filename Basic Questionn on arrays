// calculate the first and second max in an array

#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the elements = ";
    cin>>n;
    int arr[n];
    
    for(int i=0;i<=n-1;i++)
    {
        cin>>arr[i];
        
    }
    
    int smax;
    smax=arr[0];
    for(int i=1;i<=n-1;i++)
    {
        if(smax<arr[i])
        {
            smax=arr[i];
        }
        
    }
     int secmax;
    secmax=arr[0];
    for(int i=1;i<=n-1;i++)
    {
        if(secmax<arr[i] && secmax!=arr[0])
        {
            secmax=arr[i];
        }
        
    }
    cout<<"max number is"<<smax<<endl;
     cout<<" second max number is"<<secmax<<endl;
}









// count the number of elelment in an array which  are greater than X


#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the number = ";
    cin>>n;
    int arr[n];
    
    for(int i =0 ;i<=n-1;i++)
    {
        cin>>arr[i];
        
    }
    
    int size;
    size = sizeof(arr)/sizeof(arr[0]);
    cout<<"number of elements aree = "<<size<<endl;
    int x;
    cout<<"enter the another number = "<<endl;;
    cin>>x;
    for(int i =0;i<=n-1;i++)
    {
        if(arr[i]>x)
        {
            cout<<"elements greater than x are = "<<arr[i]<<endl;
        
        }
        else
        {
            cout<<"NO element grater than x ";
        }
    }
}





















































































 
